# EditorConfig, see http://EditorConfig.org for a description

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
# 4 space indentation
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = "true"

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[package.json]
indent_size = 2
